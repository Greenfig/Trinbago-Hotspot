@model Trinbago_MVC5.Areas.Admin.Models.AdminClassifiedAdEditForm

<div class="card mb-2">
    <div class="card-header">Add photos (Format: jpg/png Max Size: 6MB)</div>
    <div class="card-body p-3">
        <ul class="uploaded-photo-view">
            @if (Model.Photos != null && Model.Photos.Length > 0)
            {
                var _currentHtmlTag = 0;
                foreach (var pho in Model.Photos)
                {
                    if (pho != null)
                    {
                        <li id="uploaded-@_currentHtmlTag">
                            <div id="thumbnail-decoration-@_currentHtmlTag">
                                <div id="removeimg@_currentHtmlTag" class="removeimg" data-idx="@_currentHtmlTag"></div>
                                <div class="mainribbon"></div>
                                <img id="img-@_currentHtmlTag" style="max-width:100%;height:100px;width:auto;margin-left:auto;margin-right:auto;display:block;" src="~/Images/@Model.StringId.Substring(2, 4)/@Model.StringId.Substring(0, 4)/@pho.AdList_FileName" alt="uploaded image">
                                <div class="col-12" style="border-top:double gainsboro;">
                                    <div class="row">
                                        <label class="m-0 col-12" style="overflow:hidden;height:35px;border-radius:0;border-bottom:double gainsboro;" value="@pho.Original_FileName" type="text"> @pho.Original_FileName </label>
                                        <div style="height:30px;width:100%;">
                                            <div id="makemain@_currentHtmlTag" data-idx="@_currentHtmlTag"></div>
                                            <div id="moveup@_currentHtmlTag" data-idx="@_currentHtmlTag"></div>
                                            <div id="movedown@_currentHtmlTag" data-idx="@_currentHtmlTag"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <input hidden id="@("Photos_ "+ _currentHtmlTag + "__Index")" name="Photos.Index" value="@_currentHtmlTag" />
                            <input hidden id="@("Photos_"+_currentHtmlTag+"__Original_FileName")" name="Photos[@_currentHtmlTag].Original_FileName" value="@pho.Original_FileName" />
                            <input hidden id="@("Photos_"+_currentHtmlTag+"__AdList_FileName")" name="Photos[@_currentHtmlTag].AdList_FileName" value="@pho.AdList_FileName" />
                            <input hidden id="@("Photos_"+_currentHtmlTag+"__AdDetails_FileName")" name="Photos[@_currentHtmlTag].AdDetails_FileName" value="@pho.AdDetails_FileName" />
                            <input hidden id="@("Photos_"+_currentHtmlTag+"__Raw_FileName")" name="Photos[@_currentHtmlTag].Raw_FileName" value="@pho.Raw_FileName" />
                            <input hidden id="@("Photos_"+_currentHtmlTag+"__ContentType")" name="Photos[@_currentHtmlTag].ContentType" value="@pho.ContentType" />
                            <input hidden id="@("Photos_"+_currentHtmlTag+"__PhotoLayoutIndex")" name="Photos[@_currentHtmlTag].PhotoLayoutIndex" value="" />
                        </li>
                        _currentHtmlTag++;
                    }
                }
            }
        </ul>
        <div id="progressbar-container" class="progress mt-2 mb-1 fade-hidden" style="border-radius:0px;">
            <div id="progressbar" class="progress progress-bar progress-bar-striped" style="width:0%;border-radius:0px;text-align:center;">0%</div>
        </div>
        <label id="fileupload-btn" class="btn-primary btn-sm no-margin" for="file-select" style="border-radius:0px;"><span style="padding-right:2px;" class="fa fa-folder-open"></span>Add Photos @Model.CurrentPhotoCount/@Model.Photos.Length</label>
        <label id="stopupload" class="btn-warning btn-sm no-margin float-right fade-hidden" style="border-radius:0px;"><span style="padding-right:2px;" class="fa fa-close"></span>Stop Upload</label>
        <input accept="image/*" style="z-index:-1;opacity:0;position:fixed;" type="file" id="file-select" name="inputphotos[]" multiple />
    </div>
</div>

