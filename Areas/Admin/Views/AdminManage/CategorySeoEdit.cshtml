@model Trinbago_MVC5.Models.CategorySeoEditForm

@{
    ViewBag.Title = "Category Seo Edit";
}

<hr class="topbar">
<div class="container">
    <div class="row">
        @{Html.RenderPartial("~/Views/Shared/_MyAccountMenuPartial.cshtml");}
        @using (Html.BeginForm("CategorySeoEdit","Admin", FormMethod.Post, new { @class = "col-sm-9" })) 
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header"><h1>Edit Seo Metadata&nbsp;<small>(@Model.Name)</small></h1></div>
                    <div class="card-body">
                        <form class="form-vertical">
                            <fieldset>

                                <div class="row">
                                    <div class="col-sm-12">

                                        <fieldset>
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.Id)

                                            <div class="form-group container">
                                                @Html.LabelFor(model => model.MetaKeywords, htmlAttributes: new { @class = "col-form-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.MetaKeywords, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.MetaKeywords, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group container">
                                                @Html.LabelFor(model => model.MetaTitle, htmlAttributes: new { @class = "col-form-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.MetaTitle, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group container">
                                                @Html.LabelFor(model => model.MetaDescription, htmlAttributes: new { @class = "col-form-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.TextAreaFor(model => model.MetaDescription, 4, 20, htmlAttributes : new { @class = "form-control", style = "max-width:100%;" })
                                                    @Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <p>
                                                <input type="submit" class="btn btn-primary btn-sm pull-right" style="margin-left:5px;" value="Save Changes" />
                                                @Html.ActionLink("Back to List", "CategoryList", null, htmlAttributes: new { @class = "btn btn-secondary btn-sm pull-right", style = "margin-right:5px;" })
                                            </p>
                                        </fieldset>

                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
    <br>
</div>
