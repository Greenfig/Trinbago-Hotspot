                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h2 class="formhead">Register With</h2>
                                    @{Html.RenderPartial("_ExternalLoginsListPartial", new ExternalLoginList { ReturnUrl = ViewBag.ReturnUrl }); }
                                    @using (Html.BeginForm())
                                    {
                                            @Html.AntiForgeryToken()

                                        <fieldset class="t"><h2 class="formhead">Or Create An Account With Us</h2></fieldset>
                                        <h3><strong>Account Info (Required)</strong></h3>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.PosterName)
                                            @Html.TextBoxFor(m => m.PosterName, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.PosterName, null, htmlAttributes: new { @style = "color:red;" })
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Email)
                                            @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email, null, htmlAttributes: new { @style = "color:red;" })
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Password)
                                            @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password, null, htmlAttributes: new { @style = "color:red;" })
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ConfirmPassword)
                                            @Html.PasswordFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword, null, htmlAttributes: new { @style = "color:red;" })
                                        </div>
                                        <h3><strong>Default Contact Info (Optional)</strong></h3>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ContactName)
                                            @Html.TextBoxFor(m => m.ContactName, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ContactName, null, htmlAttributes: new { @style = "color:red;" })
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ContactNumber)
                                            @Html.TextBoxFor(m => m.ContactNumber, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ContactNumber, null, htmlAttributes: new { @style = "color:red;" })
                                        </div> 
                                        <div class="form-group text-center">
                                            <input type="submit" value="Create Account" class="btn btn-primary text-center" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-5 col-sm-12 account-sidebar hidden-sm">
                    <div class="row">
                        <div class="col-sm-3" style="text-align: center;">
