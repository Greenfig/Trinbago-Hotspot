@model Trinbago_MVC5.Areas.Account.Models.ForgotPassChange

@{
    ViewBag.Title = "ForgottenPassChange";
}



<hr class="topbar">
<div class="container">
    <div class="row">
        <!--Change pass-->
        <div class="col-sm-8 offset-sm-2">
            <div class="card">
                <div class="card-header">
                    <span>
                        <span style="font-size:large">Enter a new password</span>
                    </span>
                </div>
                <div class="card-body">
                    <div class="form-vertical">
                        <fieldset>
                            <div class="row">
                                <div class="col-sm-12">
                                    @using (Html.BeginForm("ForgottenPassChange", "MyAccount", new { Area = "Account", returnUrl = ViewBag.ReturnUrl }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)

                                        <fieldset>

                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-sm-2">
                                                        @Html.LabelFor(m => m.Password)
                                                    </div>
                                                    <div class="col-sm-10">
                                                        @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(m => m.Password, "", htmlAttributes: new { style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-sm-2">
                                                        @Html.LabelFor(m => m.ConfirmPassword)
                                                    </div>
                                                    <div class="col-sm-10">
                                                        @Html.PasswordFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(m => m.ConfirmPassword,"", htmlAttributes: new { style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                            @Html.HiddenFor(m => m.Key)
                                            <input type="submit" class="btn btn-primary btn-sm pull-right" style="margin:5px;" value="change password" />                                            
                                        </fieldset>
                                    }
                                    @if (ViewBag.UNE == "true")
                                    {
                                        <section class="social" id="socialLoginForm">
                                            @Html.Action("ExternalLoginsList", new { Area = "Account", returnUrl = ViewBag.ReturnUrl })
                                        </section>
                                        <a href="@Url.Action("Register","Account", new { Area = "Account" })" class="btn btn-primary btn-sm pull-right">Create a local account</a>
                                    }
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
        <!--/Change pass-->
    </div>
    <br>
</div>
