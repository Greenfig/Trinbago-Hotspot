@{
    ViewBag.Title = "Verify Account";
}

<hr class="topbar">
<div class="container">
    <div class="row">

        <div class="col-sm-8 offset-sm-2">
            <div class="card">
                <div class="card-header">
                    <span>
                        <span style="font-size:large">Before you proceed you must verify your account!</span>
                    </span>
                </div>
                <div class="card-body">
                    <div class="form-vertical">
                        <fieldset>
                            <div class="row">
                                <div class="col-12">
                                    <fieldset>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-12">A verification email has been sent to your email address. Please check your email for more details.</div>
                                                <br /><br />
                                                <div class="col-sm-12" style="text-align:center">
                                                    @Html.ActionLink("Send New Email", "SendConfirmEmail", "Account", new { Area = "Account" }, new { @class = "btn btn-primary m-2" })
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <br>
</div>
