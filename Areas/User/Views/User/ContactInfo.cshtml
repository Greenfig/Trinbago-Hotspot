@model Trinbago_MVC5.Areas.User.Models.ContactInfo

@{
    ViewBag.Title = "Manage Contact Info";
}

<hr class="topbar">
<div class="container">
    <div class="row">
        @{Html.RenderPartial("~/Views/Shared/_MyAccountMenuPartial.cshtml");}
        @using (Html.BeginForm("ContactInfo", "User", new { Area = "User" }, FormMethod.Post, new { @class = "col-sm-9" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">Manage Contact Info</div>
                    <div class="card-body">
                        <form class="form-vertical">
                            <fieldset>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            @Html.LabelFor(model => model.ContactName)
                                        </div>
                                        <div class="col-sm-9">
                                            @Html.TextBoxFor(model => model.ContactName, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            @Html.LabelFor(model => model.ContactNumber)
                                        </div>
                                        <div class="col-sm-9">
                                            @Html.TextBoxFor(model => model.ContactNumber, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.ContactNumber, null, htmlAttributes: new { style = "color:red" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            @Html.LabelFor(model => model.ContactNumber2)
                                        </div>
                                        <div class="col-sm-9">
                                            @Html.TextBoxFor(model => model.ContactNumber2, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.ContactNumber2, null, htmlAttributes: new { style = "color:red" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            @Html.LabelFor(model => model.ContactNumber3)
                                        </div>
                                        <div class="col-sm-9">
                                            @Html.TextBoxFor(model => model.ContactNumber3, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.ContactNumber3, null, htmlAttributes: new { style = "color:red" })
                                        </div>
                                    </div>
                                </div>
                                <input type="submit" name="Submit" value="Save Changes" class="btn btn-primary btn-sm pull-right" style="margin:5px;" />
                                @Html.ActionLink("Cancel", "MyProfile", "User", new { Area = "User" }, htmlAttributes: new { @class = "btn btn-secondary btn-sm pull-right", style = "margin:5px;" })
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        }
        <!--/Ad List-->
    </div>
    <br>
</div>
