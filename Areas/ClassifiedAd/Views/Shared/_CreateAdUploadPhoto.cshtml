@model int
<div class="card mb-2">
    <div class="card-header">Add photos (Format: jpg/png Max Size: 6MB)</div>
    <div class="card-body p-3">
        <ul class="uploaded-photo-view"></ul>
        <div id="progressbar-container" class="progress mt-2 mb-1 fade-hidden" style="border-radius:0px;">
            <div id="progressbar" class="progress progress-bar progress-bar-striped" style="width:0%;border-radius:0px;text-align:center;">0%</div>
        </div>
        <label id="fileupload-btn" class="btn-primary btn-sm no-margin" for="file-select" style="border-radius:0px;"><span style="padding-right:2px;" class="fa fa-folder-open"></span>Add Photos 0/@Model</label>
        <label id="stopupload" class="btn-warning btn-sm no-margin float-right fade-hidden" style="border-radius:0px;"><span style="padding-right:2px;" class="fa fa-close"></span>Stop Upload</label>
        <input accept="image/*" style="z-index:-1;opacity:0;position:fixed;" type="file" id="file-select" name="inputphotos[]" multiple />
    </div>
</div>