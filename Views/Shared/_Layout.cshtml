                    <ul class="list-unstyled">
                        <li>
                            <a href="@Url.Action("AdList", "ClassifiedAd", new { Area = "ClassifiedAd", @category = "classified-ads", @catId = 0, @subCatId = 0 })">All Categories</a>
                        </li>
                        <li>
                            <a href="@Url.Action("AdList", "ClassifiedAd", new { Area = "ClassifiedAd", @category = "vehicles", @catId = 1, @subCatId = 0 })">Vehicles</a>
                        </li>
                        <li>
                            <a href="@Url.Action("AdList", "ClassifiedAd", new { Area = "ClassifiedAd", @category = "real-estate", @catId = 2, @subCatId = 0 })">Real Estate</a>
                        </li>
                        <li>
                            <a href="@Url.Action("AdList", "ClassifiedAd", new { Area = "ClassifiedAd", @category = "pets", @catId = 3, @subCatId = 0 })">Pets</a>
                        </li>
                        <li>
                            <a href="@Url.Action("AdList", "ClassifiedAd", new { Area = "ClassifiedAd", @category = "business-services", @catId = 4, @subCatId = 0 })">Business Services</a>
                        </li>
