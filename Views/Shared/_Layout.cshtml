<body>
    @{Html.RenderPartial("_MenuPartial"); }
    @RenderBody()
    <!--Footer-->
    <footer class="footer pt-4 mt-4">
        <!--Footer Links-->
        <div class="container text-center text-md-left">
            <div class="row">
                <!--Cat column-->
                <div class="col-md-2 mx-auto">
