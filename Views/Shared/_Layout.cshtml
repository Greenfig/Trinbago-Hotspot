                            <a href="@Url.Action("AdList", "ClassifiedAd", new { Area = "ClassifiedAd", @category = "buy-sell", @catId = 5, @subCatId = 0 })">Buy & Sell</a>
                        </li>
                        <li>
                            <a href="@Url.Action("AdList", "ClassifiedAd", new { Area = "ClassifiedAd", @category = "jobs", @catId = 6, @subCatId = 0 })">Jobs</a>
                        </li>
                    </ul>
                </div>
                <hr class="clearfix w-100 d-md-none">
                <!--More column-->
                <div class="col-md-2 mx-auto">
                    <h5 class="text-capitalize mb-4 mt-3 font-weight-bold">More Info</h5>
                    <ul class="list-unstyled">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home", new { Area = "" }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Tips and Guides", "Guides", "Home", new { Area = "" }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Terms and Conditions", "Terms", "Home", new { Area = "" }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Privacy Policy", "Privacy", "Home", new { Area = "" }, null)
                        </li>
                        <li>
                            @Html.ActionLink("About Us", "About", "Home", new { Area = "" }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Help/Contact Us", "Contact", "Home", new { Area = "" }, null)
                        </li>
                    </ul>
                </div>
                <hr class="w-100 d-md-none">
                <!--What we do column-->
                <div class="col-md-6 what-we-do">
                    <h5 class="text-capitalize mb-4 mt-3 font-weight-bold">TrinbagoHotspot - @(ViewBag.WhatWeDoTitle ?? "Classified Ads")</h5>
                    <p>
                        @(
                            ViewBag.WhatWeDoDesc != null ? new HtmlString(ViewBag.WhatWeDoDesc) : 
                            new HtmlString("TrinbagoHotspot is a " +
                            "<a style='font-weight:bold;' href="+Url.Action("AdList", "ClassifiedAd", new { Area = "ClassifiedAd", @category = "classified-ads", @catId = 0, @subCatId = 0 })+">Free Classified</a> ad " +
                            "website for Triniadad & Tobago. We provide users the opportunity to post free classifieds on a platform that is mobile friendly and easily accessable with powerful search engine capabilities. " +
                            "Find Vehicles, Real Estate, Jobs, Business Services and Buy & Sell and more in Trinidad and Tobago!")
                        )
                    </p>
                </div>
            </div>
        </div>
        <hr>
        <!--Call to action-->
        <div class="text-center py-3 d-sm-flex justify-content-sm-center">
            <ul class="list-unstyled list-inline mb-0">
                <li class="list-inline-item">
                    <h5 class="mb-1 mr-sm-3">Register and Post for FREE!</h5>
                </li>
            </ul>
            <ul class="list-unstyled list-inline mb-0">
                <li class="list-inline-item">
                    <a href="@Url.Action("Register","Account", new { Area = "Account" })" class="btn btn-outline-primary">Sign up!</a>
                </li>
                <li class="list-inline-item">
                    <a class="btn btn-postad" href="@Url.Action("CreateAd", "ClassifiedAdManage", new { Area = "ClassifiedAd", subCatId = string.Empty })">Post an Ad</a>                    
                </li>
            </ul>
        </div>
        <hr>
        <!--Social buttons-->
        <div class="text-center">
            <ul class="list-unstyled list-inline">
                <li class="list-inline-item">
                    <a class="btn-floating btn-sm btn-fb mx-1" href="@(ViewBag.CategoryId == null ? "https://www.facebook.com/TrinbagoHotspot/" :
                                                                       ViewBag.CategoryId == 1 ? "https://www.facebook.com/Vehicles-at-TrinbagoHotspot-737462723076349/" :
