@model Trinbago_MVC5.Controllers.ClassifiedAdReportForm

@using (Ajax.BeginForm("ReportAd", null, null, new AjaxOptions { UpdateTargetId = "myModalReport" }, htmlAttributes: new { @class = "form-vertical" }))
{
    <div class="modal-body">
        <fieldset>
            @Html.HiddenFor(model => model.StringId)
            @Html.HiddenFor(model => model.UserCreatorUserId)

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ReasonTitle)
                        @Html.DropDownListFor(model => model.ReasonTitle, new SelectList(new List<string>() { "Already Sold", "Duplicate / Spam", "Miscategorized", "Prohibited / Scam", "Other" }, ""), "-Please Select-", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ReasonTitle)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ReportingUser)
                        @Html.TextBoxFor(model => model.ReportingUser, htmlAttributes: new { @class = "form-control", placeholder = "Enter your email address" })
                        @Html.ValidationMessageFor(model => model.ReportingUser)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ReasonDescription)
                        <div class="row">
                            <div class="col-sm-12">
                                @Html.TextAreaFor(model => model.ReasonDescription, htmlAttributes: new { @class = "form-control", rows = "4", placeholder = "Example: Ad is in the wrong category" })
                                @Html.ValidationMessageFor(model => model.ReasonDescription)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <input type="submit" value="Submit" class="btn btn-primary pull-right" />
    </div>
}
